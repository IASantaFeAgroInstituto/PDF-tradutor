{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "http://localhost:3000",
    "paths": {
      "~/*": ["./src/*"],
      "@server/*": ["./server/src/*"]
    },
    "emitDeclarationOnly": true
  },
  "include": [
    "server/src/**/*",
    "vite.config.ts"
  ]
}
